	"description": "Small Webapplication for World vs World in Guild Wars 2.",
	"scripts": {
		"build": "npm-run-all clean-dist build-cache webpack copy",
		"build-cache": "npm-run-all build-cache:prepare build-cache:run build-cache:cleanup",
		"build-cache:prepare": "rimraf ./js/static-cache && babel ./js/ --out-dir ./tmp --copy-files --quiet",
		"build-cache:run": "node ./tmp/utils/cache.js",
		"build-cache:cleanup": "rimraf ./tmp",
		"clean-dist": "rimraf ./dist",
		"copy": "npm-run-all copy:*",
		"copy:docroot": "cpx ./docroot/** ./dist",
		"develop": "cross-env NODE_ENV=development npm-run-all -p webpack-watch run-server",
		"eslint": "eslint js/**/*.js",
		"run-server": "simple-server docroot 8000",
		"stylelint": "stylelint docroot/css/*.css",
		"test": "npm-run-all stylelint eslint",
		"webpack": "webpack",
		"webpack-watch": "webpack --watch"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/FrecksterGIT/gw2map.git"
	},
	"keywords": ["gw2", "wvw"],
